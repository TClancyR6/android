<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/etSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >
    </EditText>

    <Button
        android:id="@+id/btStartActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/etSend"
        android:text="StartActivity"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btStartActivityForResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btStartActivity"
        android:layout_toLeftOf="@id/btStartActivity"
        android:text="StartActivityForResult"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvGotAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btStartActivityForResult"
        android:text="tvGotAnswer" />

</RelativeLayout>